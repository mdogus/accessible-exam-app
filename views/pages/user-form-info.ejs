<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body>

<header class="container-fluid" style="padding: 0;">
    <%- include('../partials/header-user-forms'); %>
</header>

<main class="container-fluid">
<div class="row">
    <div class="col-sm-8">
        <div class="jumbotron">
            <div>
                <h1 class="display-4 font-raleway" style="font-weight:bold;">Kişisel Bilgi Formu</h1>
                <form id"personalInfo" action="/user/save-personal-info" method="POST">
                    <div class="form-group row">
                        <label for="inputStaticName" class="col-sm-2 col-form-label" role="heading">Ad</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="inputStaticName" name="name" value="<%= name %>" style="border:0;">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputStaticSurname" class="col-sm-2 col-form-label h6" role="heading">Soyad</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" id="inputStaticSurname" name="surname" value="<%= surname %>" style="border:0;">
                        </div>
                    </div>
                    <div class="form-group row">
                      <label for="inputStaticEmail" class="col-sm-2 col-form-label h6" role="heading">E-posta</label>
                      <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="inputStaticEmail" name="email" value="<%= email %>" style="border:0;">
                      </div>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- age -->
                    <div id="alertAgeDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen yaşınızı belirtiniz.</h6>
                    </div>
                    <div class="form-group">
                        <h4>Yaş</h4>
                        <input type="text" class="form-control" id="inputAge" name="age" placeholder="Yazınız" aria-label="Yaşınız" required>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- gender -->
                    <div id="alertGenderDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen cinsiyetinizi belirtiniz.</h6>
                    </div>
                    <h4>Cinsiyet</h4>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="gender" id="inputRadioGender1" value="Kadın">
                      <label class="form-check-label" for="inputRadioGender1">Kadın</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="gender" id="inputRadioGender2" value="Erkek">
                      <label class="form-check-label" for="inputRadioGender2">Erkek</label>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- education info -->
                    <div id="alertEduInfoDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen öğrenim bilgilerinizi belirtiniz.</h6>
                    </div>
                    <h4>Öğrenim Bilgileri</h4>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="educationInfo" id="inputRadioEducationInfo1" value="1">
                      <label class="form-check-label" for="inputRadioEducationInfo1">Öğrenciyim.</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="educationInfo" id="inputRadioEducationInfo2" value="2">
                      <label class="form-check-label" for="inputRadioEducationInfo2">Öğrenci değilim.</label>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- job -->
                    <div id="alertJobDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen mesleğinizi belirtiniz.</h6>
                    </div>
                    <h4>Mesleğinizi belirtiniz.</h4>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="inputCheckJob1">
                      <label class="form-check-label" for="inputCheckJob1">Öğrenci</label>
                      <div id="jobStudentInfo">
                        <small class="form-text text-muted" style="margin-top:-5px;padding-top:0;">Lütfen aşağıdaki alanları doldurunuz.</small>
                        <input type="text" class="form-control" id="inputTextJobRadio1" name="studentVar1" placeholder="Okul/üniversite..." aria-label="Devam ettiğiniz okul veya üniversiteyi belirtiniz." style="margin:5px;">
                        <input type="text" class="form-control" id="inputTextJobRadio2" name="studentVar2" placeholder="Bölüm/sınıf..." aria-label="Devam ettiğiniz bölüm ve sınıfı belirtiniz." style="margin:5px;">
                      </div>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="inputCheckJob2">
                      <label class="form-check-label" for="inputCheckJob2">Diğer</label>
                      <div id="jobOtherInfo">
                        <input type="text" class="form-control" id="inputTextJobRadio3" name="job" placeholder="Yazınız" aria-label="Mesleğiniz">
                      </div>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- personal techs -->
                    <div id="alertPersonalTechsDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen kullandığınız bilgi ve iletişim teknolojilerini belirtiniz.</h6>
                    </div>
                    <h4>Kullandığınız bilgi ve iletişim teknolojilerini belirtiniz.</h4>
                    <small class="form-text text-muted" style="margin-top:-10px;padding-top:0;">Birden fazla seçim yapabilirsiniz.</small>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="personalTechs" value="Akıllı telefon (iOS)" id="personalTechCheck1">
                      <label class="form-check-label" for="personalTechCheck1">Akıllı telefon (iOS)</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="personalTechs" value="Akıllı telefon (Android)" id="personalTechCheck2">
                      <label class="form-check-label" for="personalTechCheck2">Akıllı telefon (Android)</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="personalTechs" value="Dizüstü bilgisayar" id="personalTechCheck3">
                      <label class="form-check-label" for="personalTechCheck3">Dizüstü bilgisayar</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="personalTechs" value="Masaüstü bilgisayar" id="personalTechCheck4">
                      <label class="form-check-label" for="personalTechCheck4">Masaüstü bilgisayar</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="personalTechs" value="Tablet bilgisayar" id="personalTechCheck5">
                      <label class="form-check-label" for="personalTechCheck5">Tablet bilgisayar</label>
                    </div>
                    <div class="form-check">
                      <label class="form-check-label" for="personalTechCheck6" aria-hidden="true">Diğer </label>
                      <small class="text-muted" aria-hidden="true">(Varsa kullandığınız diğer bilgi ve iletişim teknolojilerini belirtiniz.)</small>
                      <div id="personalTechsOtherInfo">
                        <input type="text" class="form-control" id="inputPersonalTechCheck6" name="personalTechs" placeholder="Yazınız" aria-label="Varsa kullandığınız diğer bilgi ve iletişim teknolojilerini belirtiniz.">
                      </div>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- assistive techs -->
                    <div id="alertAssistiveTechsDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen kullandığınız yardımcı teknolojileri belirtiniz.</h6>
                    </div>
                    <h4>Kullandığınız yardımcı teknolojileri belirtiniz.</h4>
                    <div class="form-group">
                        <textarea class="form-control" id="inputAssistiveTechs" name="assistiveTechs" rows="2" placeholder="Ekran okuyucu (ör. JAWS), ekran büyüteci (ör. Windows/Büyüteç), braille ekran vb." aria-label="Kullandığınız yardımcı teknolojiler: Ekran okuyucu (ör. JAWS), ekran büyüteci (ör. Windows/Büyüteç), braille ekran vb." required></textarea>
                    </div>
                    <hr style="border:1px solid #888;" aria-hidden="true">
                    
                    <!-- operating system -->
                    <div id="alertOpSystemDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen masaüstü işletim sistemini belirtiniz.</h6>
                    </div>
                    <h4>Kullandığınız masaüstü işletim sistemini belirtiniz.</h4>
                    <small class="form-text text-muted" style="margin-top:-10px;padding-top:0;">Birden fazla seçim yapabilirsiniz.</small>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="opSystem" value="Windows" id="opSystemCheck1">
                      <label class="form-check-label" for="opSystemCheck1">Windows</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="opSystem" value="macOS" id="opSystemCheck2">
                      <label class="form-check-label" for="opSystemCheck2">macOS</label>
                    </div>
                    <div class="form-check">
                      <label class="form-check-label" for="opSystemCheck3" aria-hidden="true">Diğer </label>
                      <small class="text-muted" aria-hidden="true">(Varsa kullandığınız diğer masaüstü işletim sistemlerini belirtiniz.)</small>
                      <div id="opSystemOtherInfo">
                        <input type="text" class="form-control" id="inputOpSystemCheck3" name="opSystem" placeholder="Yazınız" aria-label="Varsa kullandığınız diğer işletim sistemlerini belirtiniz.">
                      </div>
                    </div>
                    
                    <!-- browser info -->
                    <div id="alertBrowserDiv" class="alert alert-danger" role="alert">
                        <h6>Lütfen kullandığınız internet tarayıcıyı belirtiniz.</h6>
                    </div>
                    <h4>Kullandığınız internet tarayıcıyı belirtiniz.</h4>
                    <small class="form-text text-muted" style="margin-top:-10px;padding-top:0;">Birden fazla seçim yapabilirsiniz.</small>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="browser" value="Google Chrome" id="browserCheck1">
                      <label class="form-check-label" for="browserCheck1">Google Chrome</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="browser" value="Internet Explorer" id="browserCheck2">
                      <label class="form-check-label" for="browserCheck2">Internet Explorer</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="browser" value="Microsoft Edge" id="browserCheck3">
                      <label class="form-check-label" for="browserCheck3">Microsoft Edge</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="browser" value="Mozilla Firefox" id="browserCheck4">
                      <label class="form-check-label" for="browserCheck4">Mozilla Firefox</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="browser" value="Safari" id="browserCheck5">
                      <label class="form-check-label" for="browserCheck5">Safari</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="browser" value="Opera" id="browserCheck6">
                      <label class="form-check-label" for="browserCheck6">Opera</label>
                    </div>
                    
                    <!-- save button -->
                    <div style="margin-top:20px;">
                        <input id="personalInfoSaveButton" type="submit" class="btn btn-primary btn-block" value="Kaydet">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/sidebar'); %>

</div>
</main>

<footer class="container-fluid fixed-bottom">
    <%- include('../partials/footer'); %>
</footer>

<!-- Ajax scripts -->
<%- include('../partials/script'); %>

</body>
</html>
