<!-- Google jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
document.getElementById("signUpHeading").focus();
$(document).ready(function() {
    $("#greetingMsg").delay(1000).slideUp(400);
	
    //$("#msgPersonalInfo").delay(10000).slideUp(400);
});

	/* Hide alerts */
    /* name */
    $("#alertNameDiv").hide();
    /* surname */
    $("#alertSurnameDiv").hide();
	/* phone */
    $("#alertPhoneNumberDiv").hide();
	/* email */
    $("#alertEmailDiv").hide();
    /* password */
    $("#alertPasswordDiv").hide();
	/* password again */
    $("#alertPasswordAgainDiv").hide();
	$("#alertPasswordAgainIfNotSameDiv").hide();

$(document).ready(function() {
    /* alerts */
    $("#userSignUpButton").click(function(e) {
        
        /* name */
        if($("input[name='name']").val() === "") {
            
            e.preventDefault();
            $("#alertNameDiv").show(300);
            $("#alertNameDiv").attr("tabindex","0");
            document.getElementById("alertNameDiv").focus();
            $(this).css("background-color", "red");
            $("#alertNameDiv").delay(10000).slideUp(300);
            
            /* surname */
        } else if($("input[name='surname']").val() === "") {
          
            e.preventDefault();
            $("#alertSurnameDiv").show(300);
            $("#alertSurnameDiv").attr("tabindex","0");
            document.getElementById("alertSurnameDiv").focus();
            $(this).css("background-color", "red");
            $("#alertSurnameDiv").delay(10000).slideUp(300);
        
		
		    /* phone */
		} else if($("input[name='phone']").val() === "") {
			e.preventDefault();
            $("#alertPhoneNumberDiv").show(300);
            $("#alertPhoneNumberDiv").attr("tabindex","0");
            document.getElementById("alertPhoneNumberDiv").focus();
            $(this).css("background-color", "red");
            $("#alertPhoneNumberDiv").delay(10000).slideUp(300);
			
            /* email */
        } else if($("input[name='email']").val() === "") {
        
            e.preventDefault();
            $("#alertEmailDiv").show(300);
            $("#alertEmailDiv").attr("tabindex","0");
            document.getElementById("alertEmailDiv").focus();
            $(this).css("background-color", "red");
            $("#alertEmailDiv").delay(10000).slideUp(300);
            
            /* password */
        } else if($("input[name='password']").val() === "") {
            
            e.preventDefault();
            $("#alertPasswordDiv").show(300);
            $("#alertPasswordDiv").attr("tabindex","0");
            document.getElementById("alertPasswordDiv").focus();
            $(this).css("background-color", "red");
            $("#alertPasswordDiv").delay(10000).slideUp(300);
            
            /* password again: if the field is empty */
        } else if($("input[name='passwordAgain']").val() === "") {
            
            e.preventDefault();
            $("#alertPasswordAgainDiv").show(300);
            $("#alertPasswordAgainDiv").attr("tabindex","0");
            document.getElementById("alertPasswordAgainDiv").focus();
            $(this).css("background-color", "red");
            $("#alertPasswordAgainDiv").delay(10000).slideUp(300);
			
			/* password again: if not the same */
        } else if($("input[name='password']").val() !== $("input[name='passwordAgain']").val()) {
			e.preventDefault();
            $("#alertPasswordAgainIfNotSameDiv").show(300);
            $("#alertPasswordAgainIfNotSameDiv").attr("tabindex","0");
            document.getElementById("alertPasswordAgainIfNotSameDiv").focus();
            $(this).css("background-color", "red");
            $("#alertPasswordAgainIfNotSameDiv").delay(10000).slideUp(300);
		}
    });
});

$(function() {
    
});
</script>


