<!-- Google jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function() {
    $("#personalInfoButton").click(function(event) {
        event.preventDefault();
        $("#personalInfoButton").css("background-color", "red");
        
        var data = {
            event: "Button: Kişisel Bilgi Formu düğmesine basıldı."
        };
        $.ajax({
            type: "POST",
            url: "/log",
            data: data,
            success: function(response) {
                console.log("Kişisel Bilgi Formu");
            }
        });
    });
    
    $("#startExamModalButton").click(function(event) {
        event.preventDefault();
        $("#startExamModalButton").css("background-color", "red");
        
        var data = {
            event: "Button: Sınava Başla düğmesine basıldı."
        };
        $.ajax({
            type: "POST",
            url: "/log",
            data: data,
            success: function(response) {
                    console.log("Kişisel Bilgi Formu");
            }
        });
    });
    
    /* Kişisel Bilgi Formu */
    $("#personalInfoButton").click((event) => {
        event.preventDefault();
        window.location.href = "/user/personal-info";
    });
    $("#inputCheckJob1").on("click", function() {
        $("#jobStudentInfo").removeAttr("hidden");
    });
    $("#inputCheckJob2").on("click", function() {
        $("#inputTextJobRadio3").removeAttr("hidden");
    });
    $("#personalTechCheck6").on("click", function() {
        $("#inputPersonalTechCheck6").removeAttr("hidden");
    });
    $("#opSystemCheck3").on("click", function() {
        $("#inputOpSystemCheck3").removeAttr("hidden");
    });
    
});

$(document).ready(function() {
    $("#greetingMsg").delay(5000).slideUp(300);
    $("#msgPersonalInfo").delay(5000).slideUp(300);
});

</script>
